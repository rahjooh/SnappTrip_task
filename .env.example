# Hadoop Configuration
HADOOP_VERSION=3.3.6
HDFS_NAMENODE_HOST=namenode
HDFS_NAMENODE_PORT=9000
HDFS_REPLICATION_FACTOR=2

# Spark Configuration
SPARK_VERSION=3.5.0
SPARK_MASTER_HOST=spark-master
SPARK_MASTER_PORT=7077
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g
SPARK_DRIVER_MEMORY=2g

# Kafka Configuration
KAFKA_VERSION=3.6.0
KAFKA_BROKER_COUNT=3
KAFKA_REPLICATION_FACTOR=3
KAFKA_PARTITIONS=12
KAFKA_BOOTSTRAP_SERVERS=kafka-1:9092,kafka-2:9092,kafka-3:9092

# Schema Registry
SCHEMA_REGISTRY_HOST=schema-registry
SCHEMA_REGISTRY_PORT=8081

# Airflow Configuration
AIRFLOW_VERSION=2.8.0
AIRFLOW_HOME=/opt/airflow
AIRFLOW_EXECUTOR=CeleryExecutor
AIRFLOW_FERNET_KEY=your-fernet-key-here
AIRFLOW_WEBSERVER_PORT=8080

# PostgreSQL (Airflow Metadata + Gold Layer)
POSTGRES_VERSION=15
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=airflow
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
GOLD_POSTGRES_DB=gold_layer

# Trino Configuration
TRINO_VERSION=435
TRINO_COORDINATOR_HOST=trino-coordinator
TRINO_COORDINATOR_PORT=8080
TRINO_WORKERS=2

# Monitoring
PROMETHEUS_VERSION=v2.48.0
GRAFANA_VERSION=10.2.0
LOKI_VERSION=2.9.3
TEMPO_VERSION=2.3.1
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ML Platform
KUBEFLOW_VERSION=1.8.0
FEAST_VERSION=0.35.0
MLFLOW_VERSION=2.9.0

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DATA_RETENTION_DAYS=365
WATERMARK_DELAY_HOURS=1
MICRO_BATCH_INTERVAL_MINUTES=15

# Resource Limits
MAX_EXECUTORS=10
MIN_EXECUTORS=2
KAFKA_CONSUMER_MAX_POLL_RECORDS=1000
